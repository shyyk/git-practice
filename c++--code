import subprocess

def add_git_remote(repo_path, remote_name, remote_url):
    try:
        # Navigate to the repository path
        subprocess.run(["cd", repo_path], check=True)
        
        # Add the remote repository
        subprocess.run(["git", "remote", "add", remote_name, remote_url], check=True)
        
        print(f"Remote '{remote_name}' added with URL '{remote_url}'")
    except subprocess.CalledProcessError as e:
        print(f"An error occurred: {e}")

# Example usage
repo_path = "/path/to/your/local/repo"  # Replace with your repository path
remote_name = "origin"
remote_url = "https://github.com/shyyk/git-practice.git"

add_git_remote(repo_path, remote_name, remote_url)
